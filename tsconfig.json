{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./resources",
        "paths": {
            "@/*": ["./js/*"],
            "@components/*": ["./js/components/*"],
            "@utils/*": ["./js/utils/*"],
            "@types/*": ["./js/types/*"]
        },
        "types": ["node"]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.tsx",
        "resources/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "public",
        "vendor"
    ]
}
